@model List<PruebaFinal.DTOS.ClienteDTO> 
@using PruebaFinal.DTOS;
@{
    ViewData["Title"] = "INICIO";
}
<script src="https://kit.fontawesome.com/cb9c497f76.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<h1 class="Subtitle"><i class="fas fa-folder-open icono2"></i>Company Application</h1>
<hr />
<div class="row">
    <div class="Agregar">
        <h1 class="TitleAgg"><i class="fas fa-info-circle icono"></i>Añadir Cliente</h1>
        <p class="SubtAgg">Añada un cliente para continuar.</p>
        
    </div>
    <div class="ButMod">

        <button type="button" class="btn btn-success" data-toggle="modal" data-target=".bd-example-modal-lg">
         <i class="fas fa-plus-circle icono"></i>Añadir Cliente
        </button>
        <br />
        <br />
            <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-xl">
            <div class="modal-content">

            <form action="~/Home/Create" method="post">

              <h1 class="TitleMod"><i class="fas fa-info-circle icono"></i>Añadir Cliente</h1>
              <div class="seccion1">
                <p>Nombre:*</p>
                <input type="text" name="Nombre" id="Nombre"/>
              </div>
              <div class="seccion2">
              <p>País:*</p>
              <select class="select1" name="Id_Pais" id="Id_Pais">
                  <option value="Seleccione una opción" selected>Seleccione una opción</option>
                  <option value="5">Estados Unidos</option>
                  <option value="1005">Puerto Rico</option>
                  <option value="1006">Otros</option>
              </select>
              
              <br />
              <br />
              <p>Valores para dropdown: PR, EU, Otro</p>
              </div>
              <div class="seccion3">
              <p>Tipo de entidad:*</p>
              <input type="checkbox" value="Individuo" name="Tipo_Identidad" id="Tipo_Identidad"/>
              <p class="op1">Individuo</p>
              <div class="chkdi">
              

              <div class="SeccionBtns">
                  <div class="Btn1">   
                   <button type="submit" value="Save" class="btn btn-success"><i class="fas fa-save icono"></i>Save</button>
                  </div>
                  <div class="Btn2">
                      <a href="~/" class="btn btn-danger"><i class="fas fa-times icono"></i>Cancel</a>
                  </div>
                  <br />
                  <br />
              </div>
              </div>
            </div>

           </form>
          
       </div>
        </div>
      </div>
    <br />
    @if (Model.Count > 0)
    {
        <div class="row r2">
            <div class="col md-12">
                <p class="TitleTable">Mis compañías</p>
                <table class="table table-bordered table-striped tbgnr">
                    <thead class="text-white bg-secondary">
                        <tr>
                            <td>Nombre</td>
                            <td>Pais</td>
                            <td>Tipo de Entidad</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nombre</td>
                                <td>@cliente.Id_Pais</td>
                                <td>@cliente.Tipo_Identidad</td>
                                <td>
                                    <button onclick="jsDelete(@cliente.Id_Cliente);" class="btn btn-danger"><i class="fa fa-close"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />
            </div>
        </div>
    }
</div>
</div>

<script>
    function jsDelete(id){
        url="@Url.Content("~/Home/Delete")" + "/"+id;
        $.post(url, function(data){
            if(data=="1"){
                document.location.href="@Url.Content("/")"
            }else{
                alert("Ocurrió un error")
            }
        })
    }
</script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
